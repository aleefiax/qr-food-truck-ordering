{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015"
    ],
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
